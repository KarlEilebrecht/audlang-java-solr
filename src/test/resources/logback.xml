<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE xml>
<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <!-- encoders are assigned the type ch.qos.logback.classic.encoder.PatternLayoutEncoder by default -->
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{64} - %msg%n</pattern>
        </encoder>
    </appender>

    <logger name="de.calamanari.adl.solr" level="INFO"/>

    <logger name="de.calamanari.adl.solr.SolrTestBase" level="INFO"/>

    <logger name="de.calamanari.adl.solr.cnv.DefaultMatchTreeHelper" level="INFO"/>

    <logger name="org.glassfish.jersey" level="OFF"/>

    <logger name="org.apache.solr" level="ERROR"/>

    <logger name="org.apache.lucene" level="ERROR"/>


    <root level="INFO">
        <appender-ref ref="STDOUT"/>
    </root>
</configuration>